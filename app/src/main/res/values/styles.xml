<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NormalEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/deep_gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SettingsCellSingleCompoundButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:checked">false</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:tint">@color/colorPrimary</item>

    </style>

    <style name="LoginEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/text_account_layout</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SwitchTheme" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFF</item>
    </style>


    <style name="LoadingLayout">
    </style>
    <style name="LoadingLayout.Style">
        <item name="EmptyResId">@layout/layout_loading_empty_view</item>
        <item name="LoadingResId">@layout/layout_loading_view</item>
        <item name="ErrorResId">@layout/layout_loading_error_view</item>

        <item name="TextColor">#999999</item>
        <item name="TextSize">16sp</item>

        <item name="ButtonTextColor">#999999</item>
        <item name="ButtonTextSize">16sp</item>
        <item name="ButtonBackground">@drawable/bg_layout_loading_button</item>
        <item name="EmptyImage">@null</item>
        <item name="EmptyText">暂无数据</item>
        <item name="ErrorImage">@null</item>
        <item name="ErrorText">无网络连接，请检查您的网络...</item>
        <item name="RetryText">加载失败，点击重试~~</item>
    </style>

</resources>
