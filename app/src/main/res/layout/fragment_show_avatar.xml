<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context="com.wzlab.smartcity.activity.me.ShowAvatarFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_avatar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_top"
                android:gravity="center"
                android:layout_gravity="center"
                app:navigationIcon="@drawable/ic_arrow_back_black"
                app:title="设置头像"
                app:titleTextColor="@color/black1"

                app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
                tools:ignore="UnusedAttribute" />

        </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/iv_avatar_show"
        android:src="@drawable/ic_avatar"/>

    <Button
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:id="@+id/btn_change_avatar"
        android:text="更换头像"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/black1"

        android:layout_marginTop="40dp"
        android:background="@color/white_top"/>
        <Button
            android:layout_width="256dp"
            android:layout_height="40dp"
            android:id="@+id/btn_save_avatar"
            android:text="保存头像"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/black1"
            android:layout_marginTop="20dp"

            android:background="@color/white_top"/>
    </LinearLayout>
</RelativeLayout>
