<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.wzlab.smartcity.activity.main.AlarmTaskFragment">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/srl_refresh_alarm_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wzlab.smartcity.widget.LoadingLayout
            android:id="@+id/loading_layout_device_overview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_device_overview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eee" />


        </com.wzlab.smartcity.widget.LoadingLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
